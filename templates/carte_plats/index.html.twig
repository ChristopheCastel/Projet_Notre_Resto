                            </div>
                            <div>
                                    
                                 <p class="">{{ pdt.description }}</p>
                            </div>
                        {% endif %}
                    {% endfor %}





            {% endif %}

            
        {% endfor %}
    
    
    </div>
    
    {# image des plats #}
    <div class="image-plat bg-light text-dark d-flex justify-content-center align-items-center  d-none d-lg-block col-0 col-lg-6">
    
        <img class="img-plat" src="{{asset('images/plats.jpg')}}" alt="photos des plats">
    
