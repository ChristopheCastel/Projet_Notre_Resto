{% block div %}La carte du restaurant{% endblock %}

{% block body %}



<div class="container-fluid mt-5">

<div class="entrées d-flex">
    {# image des entrées #}
    <div class="image-plat bg-white text-dark d-none d-lg-block col-0 col-lg-6">
    
        <img class="img-entree" src="{{asset('images/entree1.jpg')}}" alt="photos d'entrées">
    
    </div>
        
        {# disposition des entrées #}
    <div class="aff-entree col-md-4 mx-auto pe-5  ">
        {# On va chercher la categorie produit dans categoriProduitRepository #}
        {% for cat in categorieProduit %}

            {# on séléctionne l'id 7 des catégorie => les entrées #}
            {% if cat.id == 7 %}
                <h4 class="text-center  display-3  text-decoration-underline text-info py-2 tracking-in-expand-fwd">{{ cat.titre }}</h4>

                    {# On va chercher les produits dans ProduitRepository #}
                    {% for pdt in produits %}

                        {# on pointe sur tous les produits ayants pour catégorie l'ID 7 => les entrées #}
                        {% if pdt.categorie.id == 7 %}
                            <div class="d-flex justify-content-between  entreeTaille">
                                        
                                        {# on va pointer le titre et le prix des produits #}
                                    <p class="tracking-in-expand-fwd">{{pdt.titre}} </p><p class=" ">{{pdt.prix| number_format(2)}}€</p>
                                   
                            </div>
                            <div>
                                    {# on va pointer la description des produits #}
                                 <p class="">{{ pdt.description }}</p>
                            </div>
                        {% endif %}
                    {% endfor %}





            {% endif %}

            
        {% endfor %}
    
    
    </div>
    

</div>

</div>




{# carte des plats #}

<div class="container-fluid mt-5">
