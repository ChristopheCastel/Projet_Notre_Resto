{% extends 'base.html.twig' %}

{% block title %}Boisson index{% endblock %}

{% block body %}

<div class="produit px-3 py-3">
    <h1>Gestion des boissons</h1>

    <div class="text-center">
    {% for message in app.flashes('success') %}
            <div class="alert alert-success col-4 mx-auto">
                {{ message }}
            </div>
    {% endfor %}
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>categorie</th>
                <th>Description</th>
                <th>Modifier</th>
                <th>Supprimer</th>

            </tr>
        </thead>
        <tbody>
        {% for boisson in boissons %}
            <tr>
                <td>{{ boisson.id }}</td>
                <td>{{ boisson.titre }}</td>
                <td>{{ boisson.prix }}</td>
                <td>{{ boisson.categorie }}</td>
                <td>{{ boisson.description }}</td>
                <td>
                    
                    <a href="{{ path('admin_boisson_edit', {'id': boisson.id}) }}"><img class="icone" src="{{ asset('images/modif.png')}}" alt=""></a>

                    
                </td>
                 <td>
                    
                    {% include "admin_boisson/_delete_form.html.twig" %}
                    

                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement effectué</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_boisson_new') }}">Créer une nouvelle</a>

</div>
{% endblock %}